<UserControl x:Class="ChainReaction.Box"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    d:DesignHeight="480" d:DesignWidth="480" Width="70" Height="70" Background="#00000000" Foreground="#00000000">
    <Border x:Name="border" BorderBrush="Gray" Background="#00000000" BorderThickness="2">
        <Grid x:Name="grid" Background="#00000000" Margin="10" RenderTransformOrigin="0.5,0.5"/>
    </Border>
</UserControl>